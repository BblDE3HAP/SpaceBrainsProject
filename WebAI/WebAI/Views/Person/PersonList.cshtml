@model IEnumerable<WebAI.Models.PersonViewModel>
@{
    ViewBag.Title = "Person";
}


    @Html.Partial("_AIMenu")
    <div class="col-md-8" >
        <div style="text-align:center">
            <h3> Справочник "Персоны"</h3>
            <p>Для редактирования и удаления записи - нажмите на неё</p>
        </div>
        <hr />
        <div class="panel panel-default">
            <!-- Default panel contents -->
            <div class="panel-heading">Список "Персон"</div>
            @*<div class="panel-body">
                <p>Для редактирования и удаления записи - нажмите на неё</p>
            </div>*@
            <!-- List group -->
            <div class="list-group">

                @foreach (var person in Model)
                {
                    <a href=@Url.Action("ChangePerson", new { id = person.Id }) class="list-group-item">@person.Name</a>
                }
            </div>
        </div>
        <a class="btn btn-info" href="@Url.Action("AddPerson")">Добавить новую запись</a>
    </div>


   