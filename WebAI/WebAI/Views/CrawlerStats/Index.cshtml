@using WebAI.Models;
@model IEnumerable<WebAI.Models.CrawlerStatsViewModel>
@Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.min.js")
@{
    ViewBag.Title = "Статистика";
    int generalCountAll = 0;
    int generalCountVisited = 0;
    int generalCountNotVisited = 0;
    IEnumerable<CrawlerStatsViewModel> crawlerStatsList = ViewBag.crawlerStats;
}

<h3>Статистика краулера</h3>
<div class="form-inline">
    @using (Ajax.BeginForm("PartialCrawlerStats", "CrawlerStats", new AjaxOptions
    {
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "product-container"

    }))
    {<input type="submit" class="btn btn-info" value="Обновить" />}
</div>
<hr />
<div id="product-container">
    @Html.Partial("_crawlerStats", crawlerStatsList)
</div>

<button class="btn btn-info">Выгрузить в csv (доступно в версии 3.0)</button>
